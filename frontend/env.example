## Frontend (Next.js)
# URL del backend (Express) con el prefijo /api
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Base URL pública del frontend (útil para links/redirects)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Modo mock (intercepta Axios y usa fixtures en memoria)
NEXT_PUBLIC_MOCK_MODE=false

# Feature flags (prefijo NEXT_PUBLIC_FF_)
NEXT_PUBLIC_FF_MOCK_DELAY_MS=220
NEXT_PUBLIC_FF_SEAT_TIMER=true

# Supabase (opcional - solo se usa si el flag de Realtime está ON)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_FF_SUPABASE_REALTIME=false

# Gemini Live / audio streaming (experimental, OFF por defecto)
NEXT_PUBLIC_FF_GEMINI_LIVE=false
